<main>
    <h1>Edit Cube</h1>
    <div class="form">
        <form method="POST">
            
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{currentCubeData.name}}">
            <label for="description">Description</label>
            <textarea id="description" name="description">{{currentCubeData.description}}</textarea>
            <label for="image">ImageUrl</label>
            <input type="text" id="image" name="imageUrl" value="{{currentCubeData.imageUrl}}">
            <label for="difficulty">Difficulty</label>
            <select id="difficulty" name="difficultyLevel" />
            {{#each level}}
            <option value="{{level}}" {{#if selected}}selected{{/if}}>{{text}}</option>
            {{/each}}
            </select>
            <input type="submit" value="Edit">
        </form>
    </div>
</main>